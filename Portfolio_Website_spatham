    <script>
        // --- Page Navigation Logic ---
        const mainContentContainer = document.getElementById('main-content-container');
        const projectDetailsContainer = document.getElementById('project-details-container');
        const projectLinks = document.querySelectorAll('.project-link');
        const backButtons = document.querySelectorAll('.back-to-projects-btn');
        const mainNavLinks = document.querySelectorAll('.main-nav-link');

        // Function to show a specific project detail page
        function showProjectPage(projectId) {
            mainContentContainer.classList.add('hidden');
            projectDetailsContainer.classList.remove('hidden');
            
            // Hide all project pages first
            document.querySelectorAll('.project-detail-page').forEach(page => {
                page.classList.add('hidden');
            });

            // Show the target project page
            const targetPage = document.querySelector(projectId);
            if (targetPage) {
                targetPage.classList.remove('hidden');
                // Instantly jump to the top of the page
                window.scrollTo(0, 0);
            }
        }

        // Function to show the main content
        function showMainContent() {
            projectDetailsContainer.classList.add('hidden');
            mainContentContainer.classList.remove('hidden');
        }

        // Event listeners for project links
        projectLinks.forEach(link => {
            link.addEventListener('click', (e) => {
                e.preventDefault();
                const projectId = link.getAttribute('href');
                showProjectPage(projectId);
            });
        });

        // Event listeners for back buttons
        backButtons.forEach(button => {
            button.addEventListener('click', (e) => {
                e.preventDefault();
                showMainContent();
                const projectsSection = document.getElementById('projects');
                projectsSection.scrollIntoView({ behavior: 'smooth', block: 'start' });
            });
        });

        // --- Smooth scrolling for main nav links ---
        mainNavLinks.forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                showMainContent(); // Ensure main content is visible before scrolling
                
                // Use a short timeout to allow the DOM to update
                setTimeout(() => {
                    const targetId = this.getAttribute('href');
                    const targetElement = document.querySelector(targetId);
                    if (targetElement) {
                        targetElement.scrollIntoView({
                            behavior: 'smooth',
                            block: 'start'
                        });
                    }
                }, 10);
            });
        });

        // --- Experience Section Scroller ---
        const experienceContainer = document.getElementById('experience-container');
        const scrollLeftButton = document.getElementById('scroll-left');
        const scrollRightButton = document.getElementById('scroll-right');

        if (experienceContainer) {
            scrollRightButton.addEventListener('click', () => {
                const cardWidth = experienceContainer.querySelector('div').clientWidth;
                experienceContainer.scrollBy({ left: cardWidth + 32, behavior: 'smooth' });
            });

            scrollLeftButton.addEventListener('click', () => {
                const cardWidth = experienceContainer.querySelector('div').clientWidth;
                experienceContainer.scrollBy({ left: -(cardWidth + 32), behavior: 'smooth' });
            });
        }
    </script>

</body>
