        /* Keyframes for a smoother, more performant glow animation */
        @keyframes smooth-pulse-glow {
            0%, 100% {
                transform: scale(1);
                opacity: 0.7;
            }
            50% {
                transform: scale(1.03); /* Slightly expand the glow layer */
                opacity: 1;
            }
        }

        /* The card container needs a relative position for the pseudo-element */
        .pulse-on-hover {
            position: relative;
        }

        /* Create a pseudo-element to act as the dedicated glow layer */
        .pulse-on-hover::after {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            border-radius: 0.75rem; /* Matches the parent card's rounded-xl */
            box-shadow: 0 0 30px rgba(59, 130, 246, 0.6);
            opacity: 0; /* Hidden by default */
            z-index: -1; /* Positioned behind the card content */
            transition: opacity 0.3s ease-in-out;
        }

        /* On hover, make the glow visible and start the animation */
        .pulse-on-hover:hover::after {
            opacity: 1;
            animation: smooth-pulse-glow 4s infinite ease-in-out;
        }

        /* Custom styles for the PCB background and overall theme */
        html {
            scroll-behavior: smooth; /* Enables smooth scrolling for anchor links */
        }
        
        body {
            font-family: 'Inter', sans-serif;
            background-color: #1a103c;
            /* New PCB-style background */
            background-image:
                linear-gradient(to right, rgba(59, 130, 246, 0.1) 1px, transparent 1px),
                linear-gradient(to bottom, rgba(59, 130, 246, 0.1) 1px, transparent 1px),
                radial-gradient(circle at 25px 25px, rgba(22, 78, 148, 0.2) 2px, transparent 3px);
            background-size: 50px 50px, 50px 50px, 50px 50px;
            color: #ffffff;
        }

        /* A glassmorphism effect for cards and nav */
        .glass-effect {
            background: rgba(255, 255, 255, 0.05);
            backdrop-filter: blur(10px);
            -webkit-backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.1);
        }
        
        /* Styles for the curved hover effect on navigation links */
        .nav-item {
            padding: 0.5rem 1rem;
            /* Faint border is now always visible */
            border: 2px solid rgba(255, 255, 255, 0.2); 
            border-radius: 1.5rem; /* This creates the curved shape */
            transition: border-color 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
        }

        .nav-item:hover {
            border-color: rgba(59, 130, 246, 0.5);
            box-shadow: 0 0 10px rgba(59, 130, 246, 0.5);
        }
        
